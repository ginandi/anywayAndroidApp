<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_general">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_accidents_fatal_key"
            android:title="@string/pref_title_accidents_fatal"
            android:layout="@layout/custom_preference_widget_layout" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_accidents_severe_key"
            android:title="@string/pref_title_accidents_severe"
            android:layout="@layout/custom_preference_widget_layout" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_accidents_light_key"
            android:title="@string/pref_title_accidents_light"
            android:layout="@layout/custom_preference_widget_layout" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_accidents_inaccurate_key"
            android:title="@string/pref_title_accidents_inaccurate"
            android:layout="@layout/custom_preference_widget_layout" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_road_type">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_urban_road_key"
            android:title="@string/pref_title_urban_road"
            android:layout="@layout/custom_preference_widget_layout" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_highway_key"
            android:title="@string/pref_title_highway"
            android:layout="@layout/custom_preference_widget_layout" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_intersection_key"
            android:title="@string/pref_title_intersection"
            android:layout="@layout/custom_preference_widget_layout" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_non_intersection_key"
            android:title="@string/pref_title_non_intersection"
            android:layout="@layout/custom_preference_widget_layout" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_one_way_key"
            android:title="@string/pref_title_one_way"
            android:layout="@layout/custom_preference_widget_layout" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_two_way_key"
            android:title="@string/pref_title_two_way"
            android:layout="@layout/custom_preference_widget_layout" />
    </PreferenceCategory>


</PreferenceScreen>
